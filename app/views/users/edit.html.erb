

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <div id="error_explanation">
        <% if @user_update.errors.any? %>
          <h3><%= @user_update.errors.count %> error prohidited this obj from being saved:</h3>
          <ul>
            <% @user_update.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user_update do |f| %>

      <div class="form-group">
        <label for="user_Name">Name</label>
        <%= f.text_field :name, class: 'form-control name' %>
      </div>

      <div class="form-group">
        <label for="user_Image">Image</label>
        <%= f.file_field :profile_image, class: 'form-control-file user_image', placeholder: "プロフィール画像", accept: "image/*" %>
      </div>

      <div class="form-group">
        <label for="form-control introduction">Introduction</label>
        <%= f.text_area :introduction, class: 'form-control introduction' %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>

      <% end %>
    </div>
  </div>
</div>