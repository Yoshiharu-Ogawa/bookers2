

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/user_info', user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |users| %>
          <tbody>
            <tr>
              <td><%= image_tag users.get_profile_image(80,80) %></td>
              <td><%= users.name %></td>
              <td><%= link_to 'Show', user_path(users.id) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>